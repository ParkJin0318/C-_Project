<Page x:Class="Kiosk.PlacePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kiosk"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlacePage">

    <Grid>
        <Label
         Content="식사 할 장소를 선택해주세요."
         FontSize="24pt"
         Foreground="Black"
         Margin="20, 30, 340, 360"/>
        <Button
            x:Name="InMarket"
            Content="매장 식사"
            FontSize="26pt"
            FontWeight="Bold"
            Foreground="White"
            Margin="190,170,435,170"
            Background="Red"/>
        <Button
            x:Name="OutMarket"
            Content="포장 주문"
            FontSize="26pt"
            FontWeight="Bold"
            Foreground="White"
            Margin="435,170,190,170"
            Background="Red"/>
        <Button
            x:Name="back"
            Content="이전"
            FontSize="18pt"
            FontWeight="Bold"
            Foreground="White"
            Margin="330,360,330,50"
            Background="Red"/>
    </Grid>
</Page>
